<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/toolbar_guideline_cate_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="?attr/actionBarSize"
        />


    <TextView
        android:id="@+id/category_head_tv"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/toolbar_guideline_cate_list"/>


    <ImageButton
        android:id="@+id/category_list_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/img_button_bg"
        android:src="@drawable/ic_action_search"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/toolbar_guideline_cate_list"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/gray"
        app:dividerThickness="1dp"
        app:layout_constraintTop_toTopOf="@id/toolbar_guideline_cate_list"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_guideline_cate_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_guideline_cate_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ProgressBar
        android:id="@+id/category_list_progress_bar"
        style="?attr/circularProgressIndicatorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/rv_category_list"
        app:layout_constraintEnd_toEndOf="@id/rv_category_list"
        app:layout_constraintStart_toStartOf="@id/rv_category_list"
        app:layout_constraintTop_toTopOf="@+id/rv_category_list" />
</androidx.constraintlayout.widget.ConstraintLayout>