<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/toolbar_guideline_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="?attr/actionBarSize" />


    <TextView
        android:id="@+id/storage_head_tv"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_start"
        android:text="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/toolbar_guideline_storage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/storage_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_end"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_icon_search"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/toolbar_guideline_storage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/gray"
        app:dividerThickness="1dp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_guideline_storage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_guideline_storage" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_storage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_category" />

    <ProgressBar
        android:id="@+id/storage_progress_bar"
        style="?attr/circularProgressIndicatorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/rv_storage"
        app:layout_constraintEnd_toEndOf="@id/rv_storage"
        app:layout_constraintStart_toStartOf="@id/rv_storage"
        app:layout_constraintTop_toTopOf="@+id/rv_storage" />

    <TextView
        android:id="@+id/storage_tv"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_file_text"
        android:textColor="@color/bar_text_color"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_guideline_storage" />

</androidx.constraintlayout.widget.ConstraintLayout>